<%- include('../partials/header') %> 
<div class ="container text-center">
<table class=table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">Country</th>
        <th scope="col">Wins</th>
        <th scope="col">Losses</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% teams.forEach(t => { %>
     <tr>
        <td>
          <a href="/players"><%= t.country %></a></td>
        <td><%= t.wins %></td>
        <td><%= t.losses %></td>
        <td><form action="/teams/<%= t.id %>?_method=DELETE"
          id="delete-form" method="POST">
          <button class="delete" type="submit">X</button>
        </form></td>

        <td><form action="/teams/<%= t.id %>/?_method=PUT" method="POST" autocomplete="off">
          <input class="update" type="number" name="wins" value="<%= t.wins %>">
          <input class="update" type="number" name="losses" value="<%= t.losses %>">
          <button class="updateBut" type="submit">Update Team</button>
        </form>
        </td>
        <% }) %> 
        
      </tr>
      </tbody>
</table>
</div>
<button><a href="/players/new">Add Player</a></button>
<button><a href="/teams/new">Add Team</a></button>
<%- include('../partials/footer') %> 