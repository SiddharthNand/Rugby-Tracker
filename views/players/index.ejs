<%- include('../partials/header') %> 
<div class ="container text-center">
<table class=table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Country</th>
        <th scope="col">Jersey Number</th>
        <th scope="col">Position</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
<% players.forEach(p => { %>
  <tr>
    <td><%= p.name %></td> 
    <td>
      <a href="/teams"><%= p.country %></td>
    <td><%= p.jerseyNo %></td>
    <td><%= p.position %></td>
    <td><form action="/players/<%= p.id %>?_method=DELETE"
      id="delete-form" method="POST">
      <button class="delete" type="submit">X</button>
    </form></td>
<% }) %> 
</tr>
</tbody>
</table>
</div>
<button><a href="/players/new">Add Player</a></button>
<button><a href="/teams/new">Add Team</a></button>

<%- include('../partials/footer') %> 