<%- include('../partials/header') %> 
<div class ="container text-center">
<table class="table table-success table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Country</th>
        <th scope="col">Jersey Number</th>
        <th scope="col">Position</th>
      </tr>
    </thead>
    <tbody>
<% players.forEach(p => { %>
  <tr>
    <td><%= p.name %></td> 
    <td>
      <a href="/teams"><%= p.country %></td>
    <td><%= p.jerseyNo %></td>
    <td><%= p.position %></td>
<% }) %> 
</tr>
</tbody>
</table>
</div>
<button><a href="/players/new">Add Player</a></button>
<button><a href="/teams/new">Add Team</a></button>

